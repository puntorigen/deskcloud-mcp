# ==============================================================================
# Claude Computer Use Backend - Environment Variables
# ==============================================================================
#
# Copy this file to .env and fill in your values:
#   cp env.example .env
#
# ==============================================================================

# ==============================================================================
# Required: Claude API Key
# ==============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ==============================================================================
# API Provider Configuration
# ==============================================================================
# Options: anthropic, bedrock, vertex
API_PROVIDER=anthropic

# For AWS Bedrock (if using):
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-west-2

# For Google Vertex (if using):
# CLOUD_ML_REGION=
# ANTHROPIC_VERTEX_PROJECT_ID=

# ==============================================================================
# Database Configuration
# ==============================================================================
# SQLite (default - good for development and single-instance deployments)
DATABASE_URL=sqlite+aiosqlite:///./data/sessions.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/computeruse

# ==============================================================================
# Display Configuration
# ==============================================================================
# Virtual display settings (match VNC)
DISPLAY_NUM=1
WIDTH=1024
HEIGHT=768

# ==============================================================================
# Application Settings
# ==============================================================================
# Enable debug mode (shows detailed errors)
DEBUG=false

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# Default model for new sessions
DEFAULT_MODEL=claude-sonnet-4-5-20250929

# ==============================================================================
# VNC Configuration
# ==============================================================================
# Base URL for VNC viewer (used in API responses)
VNC_BASE_URL=http://localhost:6080/vnc.html

# ==============================================================================
# Rate Limiting
# ==============================================================================
# Messages per minute per session
RATE_LIMIT_MESSAGES=10/minute

# Sessions per hour per IP
RATE_LIMIT_SESSIONS=20/hour

